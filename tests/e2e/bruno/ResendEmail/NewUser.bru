meta {
  name: NewUser
  type: http
  seq: 1
}

post {
  url: {{baseURL}}/user-password
  body: json
  auth: bearer
}

headers {
  Accept-Language: es-ES
}

auth:bearer {
  token:
}

body:json {
  {
    "email": "resendtest@example.com",
    "name": "Resend Email Test User",
    "otpLogin": false,
    "password": "{{strongPassword}}",
    "phone": "{{$randomPhoneNumber}}",
    "role_id": 2
  }
}

script:post-response {
  const response = res.getBody();

  // Check if the status code is 200
  test("Status code is 200", function () {
      expect(res.getStatus()).to.equal(200);
  });

  // Extract and set user ID to environment variable
  bru.setEnvVar("resendEmailUserId", response.data.id);

  // Validate the user ID exists and is of correct type
  test("User ID is present and is a number", function () {
      expect(response.data.id).to.exist;
      expect(response.data.id).to.be.a('number');
  });

  // Store email for resend request
  bru.setEnvVar("resendEmailUserEmail", response.data.email);
}

settings {
  encodeUrl: true
  timeout: 0
}
