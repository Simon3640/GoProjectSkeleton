meta {
  name: PasswordResetToken
  type: http
  seq: 4
}

post {
  url: {{baseURL}}/password/reset-token
  body: json
  auth: inherit
}

body:json {
  {
    "noHashedPassword": "{{strongPassword}}",
    "token": "{{passwordUserToken}}"
  }
}

script:post-response {
  test("Response status code is 200", function () {
      expect(res.getStatus()).to.equal(200);
  });


  test("Response time is less than 200ms", function () {
      expect(res.getResponseTime()).to.be.below(200);
  });


  test("Response has required fields: data and details", function () {
      const responseData = res.getBody();

      expect(responseData).to.be.an('object');
      expect(responseData).to.have.all.keys('data', 'details');
  });


  test("The data field must be a boolean", function () {
      const responseData = res.getBody();

      expect(responseData).to.be.an('object');
      expect(responseData.data).to.be.a('boolean');
  });


  test("The details field must be a string", function () {
      const responseData = res.getBody();

      expect(responseData).to.be.an('object');
      expect(responseData.details).to.be.a('string');
  });

}

settings {
  encodeUrl: true
}
