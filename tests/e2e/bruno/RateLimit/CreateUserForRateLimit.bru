meta {
  name: CreateUserForRateLimit
  type: http
  seq: 1
}

post {
  url: {{baseURL}}/user-password
  body: json
  auth: bearer
}

headers {
  Accept-Language: es-ES
}

auth:bearer {
  token:
}

body:json {
  {
    "email": "ratelimit@example.com",
    "name": "Rate Limit Test User",
    "otpLogin": false,
    "password": "{{strongPassword}}",
    "phone": "5465413515415341",
    "role_id": 2
  }
}

script:post-response {
  const response = res.getBody();

  test("Status code is 200", function () {
      expect(res.getStatus()).to.equal(200);
  });

  bru.setEnvVar("rateLimitUserEmail", response.data.email);
  bru.setEnvVar("rateLimitUserId", response.data.id);

  test("User ID is present", function () {
      expect(response.data.id).to.exist;
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
