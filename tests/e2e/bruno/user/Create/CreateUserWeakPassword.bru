meta {
  name: CreateUserWeakPassword
  type: http
  seq: 3
}

post {
  url: {{baseURL}}/user-password
  body: json
  auth: inherit
}

headers {
  Accept-Language: es-ES
}

body:json {
  {
    "email": "weakpassword@test.goprojectskeleton.com",
    "name": "Weak Password User",
    "otpLogin": false,
    "password": "weak",
    "phone": "888777666",
    "role_id": 2
  }
}

script:post-response {
  if (!res) {
    console.error("Response is undefined");
    return;
  }

  test("Status code is 400 (Bad Request)", function () {
      expect(res.getStatus()).to.equal(400);
  });

  const response = res.getBody();

  if (!response) {
    console.error("Response body is undefined");
    return;
  }

  test("Response contains error details", function () {
      expect(response.details).to.exist;
  });

  test("Error details indicates invalid password", function () {
      expect(response.details).to.be.a('string');
      expect(response.details.toLowerCase()).to.include("password");
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
