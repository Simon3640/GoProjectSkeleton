meta {
  name: ResendWelcomeEmail
  type: http
  seq: 2
}

post {
  url: {{baseURL}}/user/resend-welcome-email
  body: json
  auth: inherit
}

headers {
  Accept-Language: es-ES
}

body:json {
  {
      "email": "{{resendEmail}}"
  }
}

script:post-response {
  test("Response status code is 200", function () {
      expect(res.getStatus()).to.equal(200);
  });


  test("Response has required fields: data and details", function () {
      const responseData = res.getBody();

      expect(responseData).to.be.an('object');
      expect(responseData).to.have.all.keys('data', 'details');
  });


  test("Data field is a boolean value", function () {
      const responseData = res.getBody();

      expect(responseData).to.be.an('object');
      expect(responseData.data).to.be.a('boolean');
      expect(responseData.data).to.equal(true);
  });


  test("Response time is less than 200ms", function () {
      expect(res.getResponseTime()).to.be.below(200);
  });

}

settings {
  encodeUrl: true
  timeout: 0
}
