meta {
  name: CreateNormalUser
  type: http
  seq: 4.5
}

post {
  url: {{baseURL}}/user-password
  body: json
  auth: bearer
}

headers {
  Accept-Language: es-ES
}

auth:bearer {
  token:
}

body:json {
  {
    "email": "{{normalUserEmail}}",
    "name": "Normal User",
    "otpLogin": false,
    "password": "{{strongPassword}}",
    "phone": "{{normalUserPhone}}",
    "role_id": 2
  }
}

script:post-response {
  const response = res.getBody();

  test("Status code is 201", function () {
      expect(res.getStatus()).to.equal(201);
  });

  test("User ID is present and is a number", function () {
      expect(response.data.id).to.exist;
      expect(response.data.id).to.be.a('number');
  });

  bru.setEnvVar("normalUserId", response.data.id);
}

settings {
  encodeUrl: true
  timeout: 0
}
